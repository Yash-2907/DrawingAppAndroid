<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lightpurple">
    <FrameLayout
        android:id="@+id/Frameid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/pallete_design">
        <ImageView
            android:id="@+id/tracelayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/whitebg"
            android:scaleType="centerCrop"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp">
        </ImageView>
        <com.example.drawingapp.DrawingView
            android:id="@+id/Canvasid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp">
        </com.example.drawingapp.DrawingView>
        <ImageView
            android:id="@+id/brushsizecircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/brushcircle"
            android:visibility="invisible">
        </ImageView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp">
        <com.google.android.material.slider.Slider
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/sizeslider"
            android:valueFrom="0"
            android:valueTo="100"
            app:thumbHeight="37dp"
            app:thumbStrokeWidth="1.5dp"
            app:thumbWidth="7dp"
            app:thumbColor="@color/lightblue"
            android:layout_weight="1"
            android:value="10"
            app:trackColorActive="@color/lightgreen"
            >
        </com.google.android.material.slider.Slider>
        <TextView
            android:id="@+id/sizepercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="23dp">

        </TextView>

        <ImageButton
            android:id="@+id/downloadbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/savebtn"
            android:background="#00000000"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/toolpallete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >
        <ImageButton
            android:id="@+id/imagebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/imagepng"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter">

        </ImageButton>
        <ImageButton
            android:id="@+id/brushbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtnselected"
            android:src="@drawable/paintbrushicon"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside">

        </ImageButton>
        <ImageButton
            android:id="@+id/colorpalletebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/colorpalletepng"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside">

        </ImageButton>
        <ImageButton
            android:id="@+id/eraserbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/eraserpng"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside">

        </ImageButton>
        <ImageButton
            android:id="@+id/undobtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/undopng"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside">

        </ImageButton>
        <ImageButton
            android:id="@+id/deleteallbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/delete3dpng"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter">

        </ImageButton>
    </LinearLayout>

</LinearLayout>