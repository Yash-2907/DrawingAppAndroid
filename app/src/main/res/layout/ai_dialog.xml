<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="@drawable/dialogdesign">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">

        <ImageButton
            android:id="@+id/closebtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:src="@drawable/crosspng"
            android:scaleType="fitCenter">

        </ImageButton>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI\nRESPONSE"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/darkblue"
        android:layout_gravity="left">

    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:background="@drawable/ai_response_design">
        <TextView
            android:id="@+id/aiResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello world"
            android:textSize="23dp"
            android:textAlignment="viewStart"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_margin="5dp">
        </TextView>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Me Custom Request Below"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/orange">

    </TextView>
    <EditText
        android:id="@+id/newreqbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="@drawable/ai_response_design"
        android:layout_margin="5dp"
        android:gravity="top"
        android:hint="New Request Here"
        android:padding="5dp"
        android:textColor="@color/black">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/askbtn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="ASK"
        android:textColor="@color/white"
        android:background="@drawable/askbtndesign"
        android:layout_gravity="center"
        >

    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>